{
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
